{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Runserver",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "8000"
            ],
            "django": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "test"
            ],
            "django": true,
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        }
    ]
}
